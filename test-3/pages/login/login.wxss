/* pages/login/login.wxss */
.contanier{
  display: flex;
  justify-content: center;
  font-size: 16px;
}
.transfer{
  display: flex;
  flex-flow: row wrap;
  margin-top: 200rpx;
  width: 560rpx;
  border-top: 1px solid #ddd;
}
.transfer>view{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.text_row{
  width: 100%;
}
.text_row>view{
  display: flex;
  align-items: center;
}
.text_row:nth-child(2){
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.text_row>view:nth-child(2){
  width: 325rpx;
  padding-left: 20rpx;
}
checkbox-group{
  padding: 30rpx 0;
}
.login_btn{
  width: 100%;
}
.login_btn>button{
  width: 100%;
  background-color: #538cf5;
  color: #fff;
  font-size: 18px;
}
.sign_text{
  margin: 0 auto;
  border-bottom: 1px solid #ddd;
  color: #6e95f5;
}
.sign_text>text{
  width: 90px;
  text-align: center;
}
